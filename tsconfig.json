{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "typedocOptions": {
    "entryPoints": ["src/**/*"],
    "out": "docs"
  },
  "exclude": ["node_modules", "dist"]
}
